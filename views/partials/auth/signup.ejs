<!-- Modal Signup -->
<div id="signup-modal" class="modal">
  <div class="modal-content">
    <h4>Welcome</h4>
    <div class="row">
    <!-- Form -->
    <form action="/signup" method="POST" class="col-s12">
      <div class="row">
        <div class="input-field col-s12">
          <input type="text" name="name" id="authName">
          <label for="authName">Name</label>
        </div>
      </div>
        <div class="row">
          <div class="input-field col-s12">
            <input type="email" name="email" id="authEmail" class="validate">
            <label for="authEmail">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col-s12">
            <input type="password" name="password" id="authPassword" class="validate">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="modal-footer">
          <input class="btn-flat modal-action" type="submit">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
        </div>
      </form>
      <!-- end form -->
    </div>
  </div>
</div>







